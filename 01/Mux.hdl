/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not (in=sel, out=NOTsel);
    
    And (a=NOTsel, b=a, out=i1);
    And (a=sel, b=b, out=i2);

    Or (a=i1, b=i2, out=out);
}